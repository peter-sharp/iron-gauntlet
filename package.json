{
  "name": "iron-gauntlet",
  "version": "1.0.0",
  "description": "A modern military strategy game",
  "scripts": {
    "start": "npm build && webpack-dev-server",
    "prebuild": "mkdirp build",
    "build": "webpack && npm run copy:html && npm run copy:all",
    "build:js": "browserify -d -e src/main.js -t [babelify --comments false --presets es2015] | uglifyjs -cm > build/bundle.min.js",
    "build:css": "cleancss css/main.css -o build/main.min.css",
    "copy:html": "ncp index.html build/index.html",
    "copy:all": "npm run copy:assets && npm run copy:phaser",
    "copy:assets": "ncp assets build/assets/",
    "copy:phaser": "ncp node_modules/phaser/build/phaser.min.js build/phaser.min.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "phaser": "^2.6.2",
    "phaser-webpack-loader": "^1.0.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "clean-css": "^3.4.17",
    "htmlprocessor": "^0.2.3",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "uglify-js": "^2.6.2",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2"
  }
}
